{
  "name": "@sys42/ui",
  "private": false,
  "version": "1.2.1",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "default": "./dist/main.js"
    },
    "./default-custom-properties.css": {
      "default": "./dist/default-custom-properties.css"
    },
    "./base.css": {
      "default": "./dist/base.css"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc --p ./tsconfig-build.json && vite --config ./vite-build.config.ts build && vite --config ./vite-build-css.config.ts build --emptyOutDir false",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "cosmos": "cosmos",
    "cosmos-export": "cosmos-export",
    "prepublishOnly": "pnpm -r --filter ui... build"
  },
  "dependencies": {
    "@sys42/utils": "workspace:^",
    "normalize.css": "^8.0.1",
    "react-merge-refs": "^2.1.1"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "glob": "^10.3.10",
    "lodash-es": "^4.17.21",
    "postcss-assign-layer": "^0.3.0",
    "prettier": "3.2.5",
    "react": "^18.2.0",
    "react-cosmos": "6.1.1",
    "react-cosmos-plugin-vite": "6.1.1",
    "react-dom": "^18.2.0",
    "typescript": "^5.2.2",
    "vite": "^5.2.9",
    "vite-plugin-dts": "^3.9.1",
    "vite-plugin-lib-inject-css": "^1.3.0",
    "vite-plugin-svgr": "^4.2.0"
  }
}
